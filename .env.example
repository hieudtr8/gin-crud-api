# GraphQL Server Configuration
GRAPHQL_PORT=8081

# Database Configuration
# Note: When using docker-compose, DB_HOST should be 'postgres' (service name)
# For local development, use 'localhost'
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=gin_crud_api
DB_SSLMODE=disable

# Database Connection Pool
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Logging Configuration
# Levels: debug, info, warn, error
LOG_LEVEL=info

# Pretty logging (true for development, false for production)
# When true: Human-readable colored output
# When false: JSON format for log aggregation
LOG_PRETTY=true
